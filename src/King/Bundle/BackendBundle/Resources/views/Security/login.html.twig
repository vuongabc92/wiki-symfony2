{% extends "KingBackendBundle:Layout:security.html.twig" %}

{% block body %}
    <div class="container">
        <div class="auth">

            <div class="_fwfl _bgw _r3 _sd auth-inside">
                <div class="auth-space">
                    <div class="auth-content">
                        <h4 class="_fwfl _tb auth-welcome"><i class="glyphicon glyphicon-user"></i> {{ 'login.welcome'|trans({}, 'KingBackendBundle') }}</h4>

                        {{ form_start(form, { 'action':path('king_backend_login_check'), 'method':'POST', 'attributes':{ 'class':'_fwfl' } }) }}
                            {{ form_widget(form._username, { 'attr': {  'class':'_fwfl _r3 _ff0 auth-field', 'placeholder':'login.username'|trans({}, 'KingBackendBundle'), 'value':last_username } }) }}
                            {{ form_widget(form._password, { 'attr': {  'class':'_fwfl _r3 _ff0 auth-field auth-password', 'placeholder':'login.password'|trans({}, 'KingBackendBundle') } }) }}

                            <span class="_fwfl auth-remember">
                                <label>
                                    {{ form_widget(form._remember_me, { 'attr': {  'class':'_fl _fc0 auth-remember-checkbox', 'checked':'checked'} }) }}
                                    <span class='_fl _tb auth-remember-txt'>{{ 'login.remember'|trans({}, 'KingBackendBundle') }}</span>
                                </label>
                            </span>

                            <input type="hidden" name="_target_path" value="/admin" />

                            <button type="submit" class="_fwfl _fc0 _r3 _tw _bgb _fwb auth-btn">{{ 'login.login'|trans({}, 'KingBackendBundle') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="_fwfl auth-footer">
                    <a class="_w50 _fl _tb _td_i _tc auth-foot-nav auth-foot-nav-left" href="#">{{ 'login.newacc'|trans({}, 'KingBackendBundle') }}</a>
                    <a class="_w50 _fl _tb _td_i _tc auth-foot-nav" href="#">{{ 'login.forgotpass'|trans({}, 'KingBackendBundle') }}</a>
                </div>
            </div>
        </div>

    </div>
{% endblock %}